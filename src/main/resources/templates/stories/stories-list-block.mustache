<div class="row g-2 g-lg-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 row-cols-xxl-6">
    {{#stories}}
        <div class="col m-3 p-2 bg-light border">
            <h3 class="h5"><a href="/stories/{{slug}}">{{title}}</a></h3>
            <h4 class="tags-enum h6">
                {{#tags}}<span><a href="/tags/{{slug}}">{{name}}</a></span>{{/tags}}
                {{^tags}}No Tags Yet{{/tags}}
            </h4>
            <h4 class="authors-enum h6">
                {{#authors}}<span><a href="/authors/{{slug}}">{{name}}</a></span>{{/authors}}
                {{^authors}}Unknown Author{{/authors}}
            </h4>

            <div>{{summary}}</div>
            <time datetime="2020-10-10">{{createdDate}}</time>
        </div>
    {{/stories}}
</div>
